<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition extends="default" name="customer/createAccount">
        <put-attribute name="body">
            <definition template="/WEB-INF/views/customer/createAccount.jsp">
                <put-attribute name="customer_info" value="/WEB-INF/views/customer/info.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition extends="default" name="customer/updateAccount">
        <put-attribute name="body">
            <definition template="/WEB-INF/views/customer/updateAccount.jsp">
                <put-attribute name="customer_info" value="/WEB-INF/views/customer/info.jsp"/>
                <put-attribute name="orders_container" value="/WEB-INF/views/customer/orders-container.jsp"/>
            </definition>

        </put-attribute>
    </definition>


</tiles-definitions>
