<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition extends="default" name="shopping/cart">
        <put-attribute name="body">
            <definition template="/WEB-INF/views/shopping/cart.jsp">
                <put-attribute name="cart-container" value="/WEB-INF/views/shopping/cart-container.jsp"/>
            </definition>
        </put-attribute>
    </definition>

    <definition extends="default" name="shopping/proceedToCheckout">
        <put-attribute name="body">
            <definition template="/WEB-INF/views/shopping/proceedCheckout.jsp">
                <put-attribute name="cart-container" value="/WEB-INF/views/shopping/cart-container.jsp"/>
            </definition>
        </put-attribute>
    </definition>

</tiles-definitions>
